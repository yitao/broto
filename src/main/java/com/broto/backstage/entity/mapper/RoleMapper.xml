<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.broto.backstage.entity.Role">
    <sql id="tableName">
        bro_role
    </sql>
    <insert id="insert" parameterType="Role">
        INSERT  INTO <include refid="tableName"/>(id,ctime,`order`,`name`,`desc`,inuse)
        VALUES (#{id},#{ctime},#{order},#{name},#{desc},#{inuse})
    </insert>

    <delete id="hardDelete" parameterType="String">
        DELETE FROM <include refid="tableName"/> WHERE id = #{id}
    </delete>

    <update id="noHardDelete" parameterType="String">
        UPDATE <include refid="tableName"/>  <set>deleted=true</set> WHERE id = #{id}
    </update>


    <update id="update" parameterType="Role">
        UPDATE <include refid="tableName"/>
        <set>
            <if test="order != null">
                `order` = #{order},
            </if>
            <if test="name != null">
                `name` = #{name},
            </if>
            <if test="desc != null">
                `desc` = #{desc},
            </if>
            <if test="inuse != null">
                `inuse` = #{inuse},
            </if>
            <if test="mtime != null">
                `mtime` = #{mtime},
            </if>
        </set>
        WHERE id = #{id}
    </update>


    <select id="findById" parameterType="String" resultType="Role">
        select * from <include refid="tableName"/> where id = #{id}
    </select>

    <select id="findAllByMap" parameterType="java.util.Map" resultType="Role">
        select * from <include refid="tableName"/>
        <where>
            1 = 1
            <if test="order != null">
                and `order` = #{order}
            </if>
            <if test="name != null">
                and `name` = #{name}
            </if>
            <if test="desc != null">
                and `desc` = #{desc}
            </if>
            <if test="inuse != null">
                and `inuse` = #{inuse}
            </if>
            <if test="mtime != null">
                and `mtime` = #{mtime}
            </if>
            <if test="deleted != null">
                and deleted = #{deleted}
            </if>
        </where>
    </select>

    <select id="countAllByMap" parameterType="java.util.Map" resultType="long">
        select count(*) from <include refid="tableName"/>
        <where>
            1 = 1
            <if test="order != null">
                and `order` = #{order}
            </if>
            <if test="name != null">
                and `name` = #{name}
            </if>
            <if test="desc != null">
                and `desc` = #{desc}
            </if>
            <if test="inuse != null">
                and `inuse` = #{inuse}
            </if>
            <if test="mtime != null">
                and `mtime` = #{mtime}
            </if>
            <if test="deleted != null">
                and deleted = #{deleted}
            </if>
        </where>
    </select>

</mapper>