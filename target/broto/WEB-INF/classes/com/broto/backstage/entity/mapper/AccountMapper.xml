<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.broto.backstage.entity.Account">
    <sql id="tableName">
        bro_account
    </sql>
    <insert id="insert" parameterType="Account">
        INSERT  INTO <include refid="tableName"/>(id,ctime,`order`,account,password,inuse,code)
        VALUES (#{id},#{ctime},#{order},#{account},#{password},#{inuse},#{code})
    </insert>

    <delete id="deleteById" parameterType="String">
        DELETE FROM <include refid="tableName"/> WHERE id = #{id}
    </delete>

    <select id="getById" parameterType="String" resultType="Account">
        select * from <include refid="tableName"/> where id = #{id}
    </select>


    <update id="update" parameterType="Account">
        UPDATE <include refid="tableName"/>
        <set>
            <if test="mtime != null">
                mtime = #{mtime},
            </if>
            <if test="order != null">
                'order'= #{order},
            </if>
            <if test="account != null">
                account = #{account},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="inuse != null">
                inuse = #{inuse},
            </if>
            <if test="code != null">
                code = #{code},
            </if>
        </set>
        WHERE id=#{id}
    </update>


    <select id="getByMap" parameterType="java.util.Map" resultType="Account">
        select * from <include refid="tableName"/>
        <where>
            1 = 1
            <if test="account != null">
                and account = #{account}
            </if>
            <if test="inuse != inuse">
                and inuse = #{inuse}
            </if>
            <if test="code != inuse">
                and code = #{code}
            </if>
        </where>
    </select>

</mapper>