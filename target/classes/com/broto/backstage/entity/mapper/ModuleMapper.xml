<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.broto.backstage.entity.Module">
    <sql id="tableName">
        bro_module
    </sql>

    <resultMap id="actionMap" type="Action">
        <id column="action_id" property="id"/>
        <result column="action_label" property="label"/>
        <result column="action_action" property="action"/>
    </resultMap>
    <resultMap id="maMap" type="Module">
        <id column="id" property="id"/>
        <result column="label" property="label"/>
        <collection property="actions" javaType="java.util.List" resultMap="actionMap"/>
    </resultMap>


    <insert id="insert" parameterType="Module">
        INSERT INTO <include refid="tableName"/>(id,ctime,`order`,label,hint,`desc`,`fa_module_id`,`show`,`deleted`)
        VALUES (#{id},#{ctime},#{order},#{label},#{hint},#{desc},#{faModuleId},#{show},#{deleted})
    </insert>

    <delete id="hardDelete" parameterType="String">
        DELETE FROM <include refid="tableName"/> WHERE id = #{id}
    </delete>

    <update id="noHardDelete" parameterType="String">
        UPDATE <include refid="tableName"/>  <set>deleted=true</set> WHERE id = #{id}
    </update>

    <update id="update" parameterType="Module">
        UPDATE <include refid="tableName"/>
        <set>
            <if test="order != null">
                `order` = #{order},
            </if>
            <if test="label != null">
                `label` = #{label},
            </if>
            <if test="faModuleId != null">
                `fa_module_id` = #{faModuleId},
            </if>
            <if test="hint != null">
                `hint` = #{hint},
            </if>
            <if test="desc != null">
                `desc` = #{desc},
            </if>
            <if test="mtime != null">
                `mtime` = #{mtime},
            </if>
            <if test="show != null">
                `show` = #{show},
            </if>
        </set>
        WHERE id = #{id}
    </update>


    <select id="findById" parameterType="String" resultType="Module">
        select * from <include refid="tableName"/> where id = #{id}
    </select>

    <select id="findAllByMap" parameterType="java.util.Map" resultType="Module">
        select * from <include refid="tableName"/>
        <where>
            1 = 1
            <if test="order != null">
                and `order` = #{order},
            </if>
            <if test="label != null">
                and `label` = #{label},
            </if>
            <if test="faModuleId != null">
                and `fa_module_id` = #{faModuleId},
            </if>
            <if test="hint != null">
                and `hint` = #{hint},
            </if>
            <if test="desc != null">
                and `desc` = #{desc},
            </if>
            <if test="mtime != null">
                and `mtime` = #{mtime},
            </if>
            <if test="deleted != null">
                and deleted = #{deleted}
            </if>
            <if test="show != null">
                and `show` = #{show},
            </if>
        </where>
    </select>

    <select id="countAllByMap" parameterType="java.util.Map" resultType="Module">
        select count(*) from <include refid="tableName"/>
        <where>
            1 = 1
            <if test="order != null">
                and `order` = #{order},
            </if>
            <if test="label != null">
                and `label` = #{label},
            </if>
            <if test="faModuleId != null">
                and `fa_module_id` = #{faModuleId},
            </if>
            <if test="hint != null">
                and `hint` = #{hint},
            </if>
            <if test="desc != null">
                and `desc` = #{desc},
            </if>
            <if test="mtime != null">
                and `mtime` = #{mtime},
            </if>
            <if test="deleted != null">
                and deleted = #{deleted}
            </if>
            <if test="show != null">
                and `show` = #{show},
            </if>
        </where>
    </select>

</mapper>